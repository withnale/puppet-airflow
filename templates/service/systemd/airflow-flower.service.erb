[Unit]
Description= Airflow flower
Wants=basic.target
After=basic.target network.target

[Service]
Environment="AIRFLOW_HOME=<%= @home_folder %>"
User=<%= @user %>
Group=<%= @group %>
Type=simple
ExecStart=<%= @pip_bin_path %>/airflow flower
KillMode=process
Restart=on-failure
RestartSec=15s

[Install]
WantedBy=multi-user.target